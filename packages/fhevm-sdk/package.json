{
  "name": "@fhevm-sdk/core",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK - Framework agnostic SDK for building confidential dApps",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && tsc --module esnext --outDir dist/esm",
