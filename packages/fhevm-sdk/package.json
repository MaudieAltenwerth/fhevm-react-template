    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "zama",
    "sdk",
    "privacy",
    "confidential"
  ],
  "author": "FHEVM SDK Contributors",
  "license": "MIT",
  "peerDependencies": {
    "ethers": "^6.0.0"
  },
  "dependencies": {
    "fhevmjs": "^0.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  }
}
